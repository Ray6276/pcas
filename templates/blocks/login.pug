extends ../layout

append scripts
    script(src='/scripts/login.js')

block content
    .card.w-25.mx-auto
        .card-body
            label #{message}
            form(action='/login', method='post')
                .form-group
                    label(for='username') Username:
                    input.form-control(type='text', name='username')
                .form-group
                    label(for='password') Password:
                    input.form-control(type='password', name='password')
                    a(href='#') Forgot Password
                .form-group.d-flex.justify-content-end
                    input.btn.btn-primary.mr-1(type='submit', value='login')
                    button#registration-button.btn.btn-info(type='button') Register